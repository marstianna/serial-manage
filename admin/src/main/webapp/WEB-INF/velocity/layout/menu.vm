	function menuClickCallback(name,path){
		if(path==null||path=='') {
            return;
        }
		$.unionTab.addTab({
			title :name,
			url : path
		});
	}
	
	
	$(document).ready(function(){
		$("#menu_sidebar").promotion_menu(menus,menuClickCallback);
		
