<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hotpot.dao.PromotionMapper" >
    <sql id="Base_Column_List">
        id,enough,discount,`type`,store_id storeId,start_time startTime,end_time endTime,pay_type payType
    </sql>

    <insert id="insert" parameterType="com.hotpot.domain.Promotion">
        insert into promotion(enough,discount,`type`,store_id,start_time,end_time,pay_type)
        values (#{enough},#{discount},#{type},#{storeId},#{startTime},#{endTime},#{payType})
    </insert>

   <select id="getAllPromotions" resultType="com.hotpot.domain.Promotion">
       SELECT
       <include refid="Base_Column_List" />
       from promotion where
           <![CDATA[ start_time <= #{currentTime} ]]>
           AND <![CDATA[ end_time >= #{currentTime} ]]>
   </select>

    <select id="getPromotionById" resultType="com.hotpot.domain.Promotion">
        SELECT
        <include refid="Base_Column_List" />
        from promotion where id = #{id}
    </select>

    <select id="getAllPromotionsBySearcher" parameterType="com.hotpot.searcher.PromotionSearcher" resultType="com.hotpot.domain.Promotion">
        select
        <include refid="Base_Column_List" />
        from promotion
        <where>
            <if test="id != null">
                AND id = #{id}
            </if>
            <if test="type != null">
                AND `type` = #{type}
            </if>
            <if test="payType != null">
                AND pay_type = #{payType}
            </if>
            <if test="storeId != null">
                AND store_id = #{storeId}
            </if>
            <if test="startTime != null">
                AND <![CDATA[ start_time >= #{startTime} ]]>
            </if>
            <if test="endTime != null">
                AND <![CDATA[ end_time <= #{endTime} ]]>
            </if>
        </where>
        order by create_time desc
    </select>
</mapper>