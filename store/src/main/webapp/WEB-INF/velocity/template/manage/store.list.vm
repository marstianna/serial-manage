                            datatype: "local",
                            colNames: ["店铺ID", "店铺名", "店铺所有人", "所有人电话", "店铺座机", "创建时间","管理系统登录名","操作" ],
                            colModel: [
                                {
                                    name: 'store.id',
                                    index: 'id',
                                    align: "center",
