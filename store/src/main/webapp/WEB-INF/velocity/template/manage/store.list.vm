                                },
                                {
                                    name: 'store.createTime',
                                    index: 'storeCreateTime',
                                    align: "center",
                                    width: "100px",
                                },
                                {
                                    name: 'owner.loginName',
                                    index: 'ownerLoginName',
                                    align: "center",
                                    width: "140px",
                                    minWidth: "90px",
                                },
                                {
                                    name: 'operate',
                                    index: 'operate',
                                    align: "center",
                                    width: "140px",
                                    minWidth: "90px",
                                    formatter : function(cellval, optss,
