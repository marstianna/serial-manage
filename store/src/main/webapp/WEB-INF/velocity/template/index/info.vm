            //if(bodyclass){
            $('body').attr("class", bodyclass);
            //}
        }, 0);
        fixBtns();
        $("#list")
                .jqGrid(
                {
                    url: '$ctx/index/tableList',
                    datatype: "local",
                    colNames: ["餐桌编号", "就餐人数","就餐时间", "点菜(功能暂未开放)", "结账", "下一位"],
                    colModel: [
                        {
                            name: 'tableCode',
